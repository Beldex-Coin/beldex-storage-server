[Unit]
Description=Lokinet Auth Server
Wants=network-online.target
After=network-online.target


[Service]
User=nobody
SyslogIdentifier=beldexnet-auth
ExecStart=/usr/bin/python3 -m beldexnet.auth --bind tcp://0.0.0.0:5555/ --cmd /usr/local/exit-provider/check.sh

[Install]
WantedBy=multi-user.target